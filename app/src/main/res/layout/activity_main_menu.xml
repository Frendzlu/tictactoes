<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_foreground"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonus"
        android:layout_width="298dp"
        android:layout_height="100dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="57dp"
        android:background="@drawable/back"
        android:text="I've got no friends"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#FFCCAFED"
        app:backgroundTint="#460591"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button"
        tools:ignore="MissingConstraints"></Button>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:text="Noughts'n'crosses"
        android:textSize="35sp"
        android:textStyle="bold"
        app:fontFamily="sans-serif"
        android:textColor="#FFCCAFED"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="298dp"
        android:layout_height="100dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="57dp"
        android:background="@drawable/back"
        android:text="Play"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="#FFCCAFED"
        app:backgroundTint="#460591"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:ignore="MissingConstraints"></Button>

    <Button
        android:id="@+id/buttonus2"
        android:layout_width="298dp"
        android:layout_height="100dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="67dp"
        android:layout_marginEnd="57dp"
        android:layout_marginBottom="180dp"
        android:background="@drawable/back"
        android:text="PLay online"
        android:textSize="31sp"
        android:textStyle="bold"
        android:textColor="#FFCCAFED"
        app:backgroundTint="#460591"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonus"
        tools:ignore="MissingConstraints"></Button>

</androidx.constraintlayout.widget.ConstraintLayout>